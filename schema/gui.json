{
  "$schema": "http://json-schema.org/draft-04/schema",
  "description": "Gui layout",
  "definitions": {
    "priority": {
      "description": "Required execution priority",
      "anyOf": [
        {
          "type": "string",
          "enum": [
            "lowest",
            "low",
            "normal",
            "high",
            "highest"
          ]
        },
        {
          "type": "integer"
        }
      ]
    },
    "at": {
      "type": "string",
      "description": "Execution point",
      "enum": [
        "tick_start",
        "tick_end"
      ]
    },
    "method": {
      "type": "string",
      "description": "Name of the method being called",
      "pattern": "(?:[\\p{L}_$][\\p{L}\\p{N}_$]*\\.)*[\\p{L}_$][\\p{L}\\p{N}_$]*#[\\p{L}_$][\\p{L}\\p{N}_$]*\\([\\p{L}_$][\\p{L}\\p{N}_$]*\\)"
    },
    "ticker": {
      "type": "object",
      "required": [
        "at",
        "consumer"
      ],
      "properties": {
        "at": {
          "$ref": "#/definitions/at"
        },
        "priority": {
          "$ref": "#/definitions/priority"
        },
        "consumer": {
          "type": "object",
          "required": [
            "type"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "reflect"
              ]
            },
            "method": {
              "$ref": "#/definitions/method"
            }
          }
        }
      }
    },
    "sound": {
      "anyOf": [
        {
          "$ref": "#/definitions/key"
        },
        {
          "type": "object",
          "required": [
            "key"
          ],
          "properties": {
            "key": {
              "$ref": "#/definitions/key"
            },
            "source": {
              "type": "string",
              "enum": [
                "master",
                "music",
                "record",
                "weather",
                "block",
                "hostile",
                "neutral",
                "player",
                "ambient",
                "voice"
              ]
            },
            "volume": {
              "type": "number",
              "minimum": 0,
              "exclusiveMaximum": 1
            },
            "pitch": {
              "type": "number",
              "minimum": 0,
              "exclusiveMaximum": 2
            }
          }
        }
      ]
    },
    "key": {
      "type": "string",
      "pattern": "([a-z0-9_\\-.]+:)?[a-z0-9_\\-./]+"
    }
  },
  "type": "object",
  "required": [
    "key",
    "rows"
  ],
  "properties": {
    "key": {
      "$ref": "#/definitions/key"
    },
    "rows": {
      "type": "integer",
      "minimum": 1,
      "maximum": 6
    },
    "background": {
      "type": "string"
    },
    "button_configurer": {
      "type": "object",
      "properties": {
        "tickers": {
          "$ref": "#/properties/buttons/items/properties/tickers"
        },
        "click_actions": {
          "$ref": "#/properties/buttons/items/properties/click_actions"
        }
      }
    },
    "tickers": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ticker"
      }
    },
    "buttons": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "slots": {
            "anyOf": [
              {
                "type": "integer",
                "minimum": 0,
                "maximum": 53
              },
              {
                "type": "array",
                "items": {
                  "$ref": "#/properties/buttons/items/properties/slots/anyOf/0"
                }
              },
              {
                "type": "string"
              }
            ]
          },
          "slot": {
            "$ref": "#/properties/buttons/items/properties/slots"
          },
          "default_enabled": {
            "type": "boolean"
          },
          "default_shown": {
            "type": "boolean"
          },
          "click_actions": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "consumer"
              ],
              "properties": {
                "priority": {
                  "$ref": "#/definitions/priority"
                },
                "consumer": {
                  "type": "object",
                  "required": [
                    "type"
                  ],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": [
                        "reflect",
                        "perform_command",
                        "open",
                        "sound"
                      ]
                    },
                    "method": {
                      "$ref": "#/definitions/method"
                    },
                    "label": {
                      "type": "string"
                    },
                    "open": {
                      "type": "string"
                    },
                    "sound": {
                      "$ref": "#/definitions/sound"
                    }
                  }
                }
              }
            }
          },
          "texture": {
            "type": "string"
          },
          "name": {
            "type": "string"
          },
          "lore": {
            "type": "array",
            "items": [
              {
                "type": "string"
              }
            ]
          },
          "tickers": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/ticker"
            }
          },
          "default_enchanted": {
            "type": "boolean"
          }
        }
      }
    }
  }
}